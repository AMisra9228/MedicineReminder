<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings"
    tools:context=".PasswordSettingsActivity"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#7777EEEE" >

    <TextView
        android:id="@+id/my_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="☺Have A Nice Day☺"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#234545" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:orientation="vertical">

        <Button
            android:visibility="gone"
            android:id="@+id/button_change_sleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_home"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_background"
            android:text="Change Sleep Hours"
            android:textColor="#862458"/>

        <Button
            android:id="@+id/button_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_home"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_background"
            android:text="User Profile"
            android:textColor="#862458"/>

        <Button
            android:id="@+id/btn_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable"
            android:background="@drawable/custom_background"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#862458"
            android:layout_alignStart="@+id/button_home"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disable"
            android:background="@drawable/custom_background"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="#862458"
            android:layout_alignStart="@+id/button_home"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <!--<Button-->
            <!--android:id="@+id/btn_pinOpt"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Disable"-->
            <!--android:background="@drawable/custom_background"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textColor="#862458"-->
            <!--android:layout_alignStart="@+id/button_home"-->
            <!--android:layout_centerVertical="true" />-->


        <Button
            android:id="@+id/button_change_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_change_sleep"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_background"
            android:text="Change PIN"
            android:textColor="#862458"/>


        <Button
            android:id="@+id/button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_change_pin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_background"
            android:text="Back to Home Screen"
            android:textColor="#862458"/>


    </LinearLayout>


</RelativeLayout>