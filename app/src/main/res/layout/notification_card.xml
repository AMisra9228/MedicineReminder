<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_notification"
    android:layout_margin="5dp"
    android:padding="2dp"
    app:cardCornerRadius="2dp"
    app:contentPadding="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#bee8fb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName_Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:text="Medicine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:text="Reminder Date and Time" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMedDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:text="Description/Purpose..."/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/custom_background2">

            <Button
                android:id="@+id/btnTaken"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Taken"
                android:textSize="15sp"
                android:background="@drawable/custom_background"/>

            <Button
                android:id="@+id/btnSnooze"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snooze"
                android:textSize="15sp"
                android:background="@drawable/custom_background"/>

            <Button
                android:visibility="gone"
                android:id="@+id/btnSkip"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textSize="15sp"
                android:background="@drawable/custom_background"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
